{
    "name": "creativity_network",
    "n_gpu": 1,

    "arch": {
        "type": "Im2QModel",
        "args":{
            "backbone_name":"resnet18",
            "hidden_size":512,
            "concatenate": false
        }
    },
    "data_loader": {
        "type": "UAVDataLoader",
        "args":{
            "image_dir": "dataset/images",
            "questions_path": "dataset/UAV_summaries_and_questions_formatted.pkl",
            "test_imgs": "dataset/filenames_test.txt",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 1e-8,
            "amsgrad": true
        }
    },
    "loss": "tot_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
